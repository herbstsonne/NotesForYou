    <item name="android:background">@drawable/widget_bg</item>
  </style>

  <style name="Text" />

  <style name="Text.Loading">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.BlogTitle">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@android:color/holo_blue_dark</item>
  </style>

  <style name="Text.Day">
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@android:color/holo_orange_dark</item>
  </style>
  
  <style name="ShowApp">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@android:color/holo_orange_light</item>
